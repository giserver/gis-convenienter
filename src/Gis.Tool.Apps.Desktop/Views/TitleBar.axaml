<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Gis.Tool.Apps.Desktop.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             mc:Ignorable="d"
             x:Class="Gis.Tool.Apps.Desktop.Views.TitleBar">
    
    <StackPanel Margin="8" Orientation="Horizontal">
        <Button Background="Transparent" Command="{Binding ToggleSplitViewCommand}">
            <PathIcon Height="14" Width="14" Data="{StaticResource Menu}"></PathIcon>
        </Button>
        
        <StackPanel Orientation="Horizontal">
            <PathIcon Data="{StaticResource GisLogo}" VerticalAlignment="Center"></PathIcon>
            <TextBlock Margin="6 0 0 0" VerticalAlignment="Center">GIS工具箱</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
